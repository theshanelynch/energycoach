# Data Directory Configuration
# Copy this to .env and adjust paths as needed

# Base data directory (relative to repo root)
DATA_DIR=./data

# ESB data paths
ESB_DATA_DIR=${DATA_DIR}/esb
ESB_USAGE_FILE=${ESB_DATA_DIR}/usage_raw.json
ESB_PROCESSED_DIR=${DATA_DIR}/esb/processed

# Home Assistant data paths
HA_DATA_DIR=${DATA_DIR}/homeassistant
HA_SENSORS_DIR=${HA_DATA_DIR}/sensors
HA_STATES_DIR=${HA_DATA_DIR}/states

# Solix data paths
SOLIX_DATA_DIR=${DATA_DIR}/solix
SOLIX_BATTERY_FILE=${SOLIX_DATA_DIR}/battery.json
SOLIX_PV_FILE=${SOLIX_DATA_DIR}/pv.json

# Shared data paths
SHARED_DATA_DIR=${DATA_DIR}/shared
ENERGY_PLAN_FILE=${SHARED_DATA_DIR}/energy_plan.json
FORECASTS_DIR=${SHARED_DATA_DIR}/forecasts

